{
  "name": "tdl",
  "version": "6.0.0-rc.2",
  "description": "TDLib (Telegram Database library) wrapper.",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "clean": "rimraf dist/ tdl-tdlib*/dist/",
    "build:tdl": "babel src/ -d dist/",
    "build:tdlib-ffi": "babel tdl-tdlib-ffi/src/ -d tdl-tdlib-ffi/dist/",
    "build:tdlib-addon": "babel tdl-tdlib-addon/src/ -d tdl-tdlib-addon/dist/",
    "build:tdlib-wasm": "babel tdl-tdlib-wasm/src/ -d tdl-tdlib-wasm/dist/",
    "build": "npm run build:tdl && npm run build:tdlib-ffi && npm run build:tdlib-addon && npm run build:tdlib-wasm",
    "lint": "eslint . --max-warnings 0",
    "test": "npm run flow:check && npm run ts && npm run lint",
    "prepare": "npm run clean && npm run build",
    "prepack": "npm test",
    "ts": "tsc --noEmit",
    "flow:check": "flow check --include-warnings --max-warnings 0",
    "flow:start": "pm2 start tdl-flow.sh",
    "flow:stop": "pm2 stop tdl-flow",
    "flow:restart": "npm run flow:stop && npm run flow:start",
    "flow:status": "flow status",
    "start": "node dist"
  },
  "files": [
    ".flowconfig",
    "index.js",
    "index.js.flow",
    "index.d.ts",
    "dist",
    "vendor",
    "flow",
    "types",
    "examples",
    "README.md",
    "TDLib_API.md"
  ],
  "dependencies": {
    "debug": "^3.1.0",
    "eventemitter3": "^3.0.1",
    "promptly": "^3.0.3",
    "ramda": "^0.25.0",
    "tdl-shared": "^0.5.0"
  },
  "optionalDependencies": {
    "fluture": "^8.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-flow": "^7.0.0",
    "@bannerets/eslint-config-flow": "^0.5.0",
    "@types/node": "^10.5.7",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.9.0",
    "flow-bin": "^0.76.0",
    "rimraf": "^2.6.2",
    "typescript": "^3.0.1"
  },
  "author": "Bannerets <save14@protonmail.com>",
  "license": "MIT",
  "keywords": [
    "telegram",
    "telegram-api",
    "tdlib",
    "bindings",
    "mtproto",
    "ffi",
    "tg",
    "tglib",
    "wrapper"
  ],
  "directories": {
    "example": "examples"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bannerets/tdl.git"
  },
  "bugs": {
    "url": "https://github.com/Bannerets/tdl/issues"
  },
  "homepage": "https://github.com/Bannerets/tdl#readme",
  "browser": {
    "./dist/prompt.js": "./dist/prompt-stubs.js"
  }
}
